@{
    ViewData["Title"] = "Home Page";
}
@model HomeViewModel



@using (Html.BeginForm("QueryChatGPT", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="d-flex flex-column justify-content-center align-items-center">
        <h2>Upload</h2>

        <input asp-for="Dateiupload" type="file" class="mt-5">

        <button type="submit" class="mt-5 bg-primary text-white">Submit</button>
    </div>



}
<div class="mt-10">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Maincategory</th>
                <th scope="col">Subcategory</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Documents.Count; i++)
            {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@Model.Documents[i].Maincategory</td>
                    <td>@Model.Documents[i].Subcategory</td>
                    <td>
                        @Html.ActionLink("View", "ViewDocument", "Home", new { docId = Model.Documents[i].Id })

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
